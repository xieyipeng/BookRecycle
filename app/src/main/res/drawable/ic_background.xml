<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom 2dp Shadow -->
    <item>
        <shape>
            <solid android:color="#e1e1e1" />
            <corners android:radius="22dp" />

        </shape>
    </item>

    <item android:bottom="4px">
        <shape>
            <solid android:color="#e1e1e1" />
            <corners android:radius="22dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</layer-list>