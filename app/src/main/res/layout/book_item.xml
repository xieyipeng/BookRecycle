<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/book_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#c4bebe"
    android:layout_height="240dp"
    android:layout_margin="3dp"
    app:cardCornerRadius="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/book_item_ImageView"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:background="#898484"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp">

        </ImageView>

        <TextView
            android:id="@+id/book_item_FindBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/book_item_ImageView"
            android:layout_alignParentLeft="true"
            android:background="#464343"
            android:layout_marginLeft="5dp"
            android:text="FindBook"
            android:textColor="#fff"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/book_item_TextView"
            android:layout_below="@+id/book_item_ImageView"
            android:layout_marginLeft="75dp"
            android:maxEms="6"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="5dp"
            android:text="数据库系统概论"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/book_item_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/book_item_FindBook"
            android:textColor="#ff0000"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
